@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="post" target="_blank" enctype="multipart/form-data" asp-controller="Home" asp-action="UpLoadFile">
        <div class="form-group">
            <div class="col-md-10">
            <p>文件上传:</p>
            <input type="file" name="files">
        </div>

            <div class="col-md-10">
                <p>拼单数额:</p>
                <input type="text" name="amount" value="300" \>
            </div>

            <div class="col-md-10">
                <p>误差范围:</p>
                <input type="text" name="minNum" value="10" \>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="上传">
            </div>
        </div>
    </form>
</div>
